/* /////////////////////////////////////////////////////
BASE STYLES
Only single elements. No classes or ids.
///////////////////////////////////////////////////// */
@require '_utils'
body * 
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

body 
  font-family Georgia, serif
  font-size body-font-size
  line-height base-line-height
  color base-color
  background #FFF
  text-align center

img
  vertical-align top


h1, h2, h3, h4, h5 
  @extend .font-serif
  text-align center
  margin 0
  padding 0

h1
  font-weight 300
  color orange
  font-style italic
  &.center
    text-align center
  
  +below(tablet)
    font-size 22px
  
  +above(desktop)
    font-size 32px

h2
  font-size 40px
  font-weight normal
  color orange
  line-height 1
  
  
  +above(tablet)
    font-size 48px

h3 
  font-size 20px 
  font-weight normal
  color green
  
  +above(tablet)
    font-size 20px 

h4
  font-size 18px 
  font-weight normal
  color orange
  
  +above(tablet)  
    font-size 24px 
    line-height 32px
h5
  font-size 16px 
  font-weight normal
  color orange
  
  +above(tablet)  
    font-size 18px 
  

h6
  font-size 16px 
  line-height 1 
  font-weight bold
  color blue 
  text-transform: uppercase
  
  +above(tablet)
    font-size 18px 
  
  &.small
    font-size: 12px
    color orange
    
    +above(tablet)
      font-size: 14px
      

  &.large
    font-size 20px
    color orange
    text-transform none
    
    +above(tablet)
      font-size 26px

  &.title
    @extends .textCenter
    display block
    margin 20px 0
    font-size 32px
    +above(tablet)
      margin-top 20px
      font-size 28px



p, ol, ul
  @extend .font-serif
  margin 0
  padding 0
  font-size 16px
  line-height 1.4
  color grey
  text-align center
  
  &.white
    color white
  &.large
    font-size 18px
    line-height 1.3

    +above(tablet)
      font-size 22px
      line-height 30px

  &.x-large
    font-size 22px
    line-height 1.3
    color blue

    +above(tablet)
      font-size 28px
      line-height 36px

  &.small
    font-size 14px
    line-height 1.5

    +above(tablet)
      font-size 16px
      line-height 24px

